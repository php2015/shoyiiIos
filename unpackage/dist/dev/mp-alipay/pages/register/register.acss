  color: #000000;
  font-size: 42rpx;
  font-weight: 600;
  margin-bottom: 50rpx;
}
.tel_login {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 10rpx 0;
