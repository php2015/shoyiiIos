  padding: 0 70rpx;
  padding-bottom: 40rpx;
}
.login-main .login-logo {
  width: 248rpx;
  padding-bottom: 50rpx;
  margin: 100rpx auto 0 auto;
}
.login-main .login-logo image {
  width: 100%;
  height: 100%;
}
